<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCloset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/drawersButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/roundedbutton"
            android:text="Drawers" />

        <Button
            android:id="@+id/accessoriesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accessories" />

        <Button
            android:id="@+id/hatsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hats" />

        <Button
            android:id="@+id/outerWearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outer Wear" />

        <Button
            android:id="@+id/topsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tops" />

        <Button
            android:id="@+id/bottomsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottoms" />

        <Button
            android:id="@+id/shoeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shoes" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>