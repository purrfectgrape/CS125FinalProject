<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCloset"
    android:background="@drawable/blackClosetForMyClosetUI">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/drawersButton"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="Drawers"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@android:color/holo_purple"/>

        <Button
            android:id="@+id/accessoriesButton"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="Accessories"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@android:color/holo_red_light"/>

        <Button
            android:id="@+id/hatsButton"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="Hats"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/outerWearButton"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="Outer Wear"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@android:color/holo_blue_light"/>

        <Button
            android:id="@+id/topsButton"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="Tops"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/colorAccent"/>

        <Button
            android:id="@+id/bottomsButton"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="Bottoms"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/design_default_color_primary"/>

        <Button
            android:id="@+id/shoeButton"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="Shoes"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@android:color/holo_orange_light"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>